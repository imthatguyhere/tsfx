{
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "printWidth": 100,
    "tailwindFunctions": ["clsx", "cn"],
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": [
        "prettier-plugin-tailwindcss",
        "prettier-plugin-organize-imports"
    ]
}